@inherits LayoutComponentBase

@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.Components.Authorization

<nav>
    <ul>
        <li><NavLink href="/" Match="NavLinkMatch.All">Home</NavLink></li>
        <AuthorizeView>
            <NotAuthorized>
                <li><NavLink href="/Identity/Account/Login">Login</NavLink></li>
                <li><NavLink href="/Identity/Account/Register">Registrar</NavLink></li>
            </NotAuthorized>
            <Authorized>
                <li><NavLink href="/dashboard" Match="NavLinkMatch.All">
                    <span class="oi oi-dashboard"></span> Dashboard
                </NavLink></li>
            </Authorized>
        </AuthorizeView>
        <li><NavLink href="/about">About</NavLink></li>
        <li><NavLink href="/contact">Contact</NavLink></li>
    </ul>
</nav>

<style>
    nav ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    nav ul li {
        margin: 1rem 0;
    }
    nav ul li a {
        color: #f0f0f0;
        text-decoration: none;
        font-weight: bold;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        display: block;
    }
    nav ul li a.active {
        background: #333;
    }
    nav ul li a:hover {
        background: #444;
    }
</style>