@namespace DarkMarket.Shared

@inherits LayoutComponentBase

@using Microsoft.AspNetCore.Components.Authorization
@inject DarkMarket.Services.AuthService AuthService
@inject NavigationManager NavigationManager

<CascadingAuthenticationState>
    <div class="sidebar">
        <NavMenu />
    </div>

    <div class="main">
        <header>
            <h1>DarkMarket</h1>
            <div class="header-actions">
                <AuthorizeView>
                    <Authorized>
                        <span>Olá, @context.User.Identity?.Name ?? "Usuário"!</span>
                        <button class="btn btn-link" @onclick="Logout">Sair</button>
                    </Authorized>
                    <NotAuthorized>
                        <span>Bem-vindo, visitante!</span>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        </header>
        <div class="content px-4">
            @Body
        </div>
        <footer>
            <span>&copy; 2025 Freeza</span>
        </footer>
    </div>
</CascadingAuthenticationState>

@code {
    private async Task Logout()
    {
        await AuthService.Logout();
        NavigationManager.NavigateTo("/login");
    }
}

<style>
    body, html {
        background: #181818;
        color: #f0f0f0;
        margin: 0;
        font-family: 'Segoe UI', Arial, sans-serif;
    }
    .sidebar {
        position: fixed;
        left: 0;
        top: 0;
        width: 220px;
        height: 100vh;
        background: #222;
        color: #fff;
        padding: 20px 0;
    }
    .main {
        margin-left: 220px;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }
    header {
        background: #111;
        padding: 1rem;
        text-align: center;
        border-bottom: 1px solid #333;
        position: relative;
    }
    .header-actions {
        position: absolute;
        top: 1rem;
        right: 2rem;
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    .btn-link {
        background: none;
        border: none;
        color: #4e8cff;
        cursor: pointer;
        font-size: 1rem;
        padding: 0.3rem 0.7rem;
        border-radius: 4px;
        transition: background 0.2s;
    }
    .btn-link:hover {
        background: #222;
    }
    .content {
        flex: 1;
        padding: 2rem;
    }
    footer {
        background: #111;
        color: #aaa;
        text-align: center;
        padding: 1rem;
        border-top: 1px solid #333;
    }
</style>