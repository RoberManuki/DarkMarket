@page
@model DarkMarket.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Registrar";
}

<h2>Registrar no DarkMarket</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
    <div>
        <label asp-for="Input.Email"></label>
        <input asp-for="Input.Email" autocomplete="username" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Input.Password"></label>
        <input asp-for="Input.Password" autocomplete="new-password" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Input.ConfirmPassword"></label>
        <input asp-for="Input.ConfirmPassword" autocomplete="new-password" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit">Registrar</button>
</form>

<div class="identity-actions">
    <a asp-page="./Login">Já tem conta? Login</a>
    <a asp-page="./ResendEmailConfirmation">Reenviar confirmação</a>
</div>

<div class="identity-footer">
    <span>&copy; 2025 DarkMarket</span>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}