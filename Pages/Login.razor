@page "/login"

@using DarkMarket.Models

@inject DarkMarket.Services.AuthService AuthService
@inject NavigationManager NavigationManager

<div class="login-container">
    <EditForm Model="@user" OnValidSubmit="HandleLogin">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="username" class="input-label">Username:</label>
            <InputText id="username" @bind-value="@user.Username" class="form-control" />
            <ValidationMessage For="@(() => user.Username)" />
        </div>

        <div class="form-group">
            <label for="password" class="input-label">Password:</label>
            <input id="password" class="form-control" @bind="@user.Password" type="@passwordInputType" />
            <ValidationMessage For="@(() => user.Password)" />
        </div>

        <button type="submit" class="btn btn-primary" disabled="@isLoading">
            @(isLoading ? "Logging in..." : "Login")
        </button>
    </EditForm>

    @if (loginFailed)
    {
        <div class="alert alert-danger mt-2">Login failed. Please try again.</div>
    }
    @if (loginSuccess)
    {
        <div class="alert alert-success mt-2">Login successful! Welcome.</div>
    }
</div>

@code {
    private User user = new User();
    private bool loginFailed = false;
    private bool loginSuccess = false;
    private bool isLoading = false;
    private bool showPassword = false;

    private string passwordInputType => showPassword ? "text" : "password";

    private void TogglePasswordVisibility()
    {
        showPassword = !showPassword;
        StateHasChanged();
    }

    private async Task HandleLogin()
    {
        isLoading = true;
        loginFailed = false;
        loginSuccess = false;

        var result = await AuthService.Login(user.Username, user.Password);
        if (result)
        {
            loginSuccess = true;
            NavigationManager.NavigateTo("/dashboard");
        }
        else
        {
            loginFailed = true;
        }
        isLoading = false;
    }
}

